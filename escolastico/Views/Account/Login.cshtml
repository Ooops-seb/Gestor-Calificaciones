
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="color-white flex-column centering">
    <div class="login-container color-d-blue">
        <header class="txt-center">
            <h1 class="txt-white txt-f28px txt-bold">@ViewBag.Title</h1>
        </header>
        <div class="flex-row centering color-l-blue">
            <img src="~/assets/usuario.png"/>
            <form asp-controller="Account" asp-action="Login" method="post" class="login-content flex-column centering">
                <span class="txt-white txt-bold txt-f20px">Usuario</span>
                <input class="input-props" type="text" placeholder="Ingrese su usuario" required name="userName"/>
                <span class="txt-white txt-bold txt-f20px">Contraseña</span>
                <input class="input-props" type="password" placeholder="Ingrese su contraseña" required name="password"/>
                <input type="submit" value="Ingresar" class="submit-props btn btn-prop centering txt-white txt-bold txt-f16px color-yellow"/>
                @if(ViewData["MSG"] != null)
                {
                    <div>
                        <div>
                            @ViewData["MSG"];
                        </div>
                    </div>
                }
            </form>
        </div>
        <footer class="txt-f12px txt-center txt-white">¿No tienes una cuenta? <a asp-controller="Account" asp-action="SingUp" class="txt-white txt-bold">Registrate</a> </footer>
    </div>
</div>
